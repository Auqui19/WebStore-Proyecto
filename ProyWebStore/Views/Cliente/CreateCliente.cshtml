@model ProyWebStore.Models.Cliente

@{
    ViewData["Title"] = "CreateCliente";
}

<h3>Crear Cliente</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCliente" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombres" class="control-label"></label>
                <input asp-for="nombres" class="form-control" />
                <span asp-validation-for="nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellido" class="control-label"></label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="docIdentidad" class="control-label"></label>
                <input asp-for="docIdentidad" class="form-control" />
                <span asp-validation-for="docIdentidad" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="IndexClientes" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.mensaje
</div>

