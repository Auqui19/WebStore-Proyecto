@model ProyWebStore.Models.Producto

@{
    ViewData["Title"] = "AgregarProducto";
}

<h3>Agregar Producto</h3>

<div>
    <div class="row">
        <div class="col-md-6">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdProducto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdProducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdMarca)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdMarca)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCategoria)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Stock)
                </dd>
                <dt class="col-sm-2">
                    Rutda
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImgProducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
                <dt class="col-sm-2">
                    Fecha
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
            </dl>
            <!-- FORMULARIO PARA INGRESAR LA CANTIDAD DE ARTICULOS -->
            @using (Html.BeginForm())
            {
                <div>
                    Cantidad a Comprar : @Html.TextBox("cantidad", 1, new { type = "number" })
                    <button type="submit" class="btn btn-warning">Consultar</button>
                </div>
                <div>
                    <br />
                    <a asp-action="ListarProductos" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-back"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M9 11l-4 4l4 4m-4 -4h11a4 4 0 0 0 0 -8h-1" /></svg>
                        Seguir Comprando
                    </a>
                    <a asp-action="MostrarCarrito" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" /><path d="M17 17h-11v-14h-2" /><path d="M6 5l14 1l-1 7h-13" /></svg>
                        Mostrar Carrito
                    </a>
                </div>
            }
        </div>
        <div class="col-md-6">
            <!-- Aquí se reemplaza "item" con "Model" -->
            <img src="@Url.Content("/productos/" + Model.ImgProducto + ".png")" alt="@Model.ImgProducto" style="width: 200px; height: 200px
;" />
        </div>
    </div>
    <div class="alert alert-success p-1">
        @ViewBag.Mensaje
    </div>
</div>