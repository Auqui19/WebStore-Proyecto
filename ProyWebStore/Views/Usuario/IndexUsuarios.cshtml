@model IEnumerable<ProyWebStore.Models.Usuario>

@{
    ViewData["Title"] = "IndexUsuarios";
}

<h3>Listado Usuarios</h3>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["mensaje"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<p>
    <a asp-action="CreateUsuario" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" /><path d="M16 19h6" /><path d="M19 16v6" /><path d="M6 21v-2a4 4 0 0 1 4 -4h4" /></svg>
         Añadir Usuario</a>
</p>
<table class="table table-bordered border-black">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th style="width: 200px;">
                @Html.DisplayNameFor(model => model.IdRol)
            </th>
            
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Nombres)
            </td >
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.NomUsuario)
            </td>
                <td class="text-center align-middle">
                    @if (item.Activo)
                    {
                        <span class="text-white bg-success px-3 py-1 rounded-pill">Activo</span>
                    }
                    else
                    {
                        <span class="text-white bg-danger px-3 py-1 rounded-pill">Inactivo</span>
                    }
                </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.IdRol)
            </td>
                <td class="align-middle">
                    <a href="@Url.Action("EditUsuario", new { id = item.IdUsuario })" class="btn btn-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-edit">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                            <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                            <path d="M16 5l3 3" />
                        </svg>
                    </a>
                    |
                    <a href="@Url.Action("DetailsUsuario", new { id = item.IdUsuario })" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-file-description"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M14 3v4a1 1 0 0 0 1 1h4" /><path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" /><path d="M9 17h6" /><path d="M9 13h6" /></svg>
                    </a>
                    |
                    <a href="@Url.Action("DeleteUsuario", new { id = item.IdUsuario })" class="btn btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M4 7l16 0" />
                            <path d="M10 11l0 6" />
                            <path d="M14 11l0 6" />
                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                        </svg>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>


@section Scripts
{
    <script type="text/javascript">
        $(".alert").delay(3000).slideUp(500);
    </script>
}