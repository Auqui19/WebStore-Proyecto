@model ProyWebStore.Models.Producto

@{
    ViewData["Title"] = "DetailsProducto";
}

<h1>Detalle Producto</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IdProducto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdProducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdMarca)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdMarca)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCategoria)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Stock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImgProducto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImgProducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
            </dl>
            <div>
                @Html.ActionLink("Editar Producto", "EditProducto", new { id = Model.IdProducto }, new { @class = "btn btn-primary" }) |
                <a asp-action="IndexProductos" class="btn btn-warning">Regresar</a>
            </div>
        </div>
        <br />
        <div class="col-md-6">
            <img src="@Url.Content("/productos/" + Model.ImgProducto + ".jpg")" alt="@Model.ImgProducto" style="max-width: 100%; height: auto;" />
        </div>
    </div>
</div>